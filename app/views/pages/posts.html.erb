<p class="title is-2 has-text-centered">Les actualités</p>
<div class="is-ancestor">
    <% Post.order(date: :desc).each_with_index do |post,index| %>
        <% if index % 4 == 0 %>
            <div class="tile mx-5">
            <%= render partial: 'partials/post_tile', locals: { post: post } %>
        
        <% elsif index % 4 == 3 %>
            <%= render partial: 'partials/post_tile', locals: { post: post } %>
            </div>
        
        <% else %>
            <%= render partial: 'partials/post_tile', locals: { post: post } %>
        <% end %>
    <% end %>
</div>

