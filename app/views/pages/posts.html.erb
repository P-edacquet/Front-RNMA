<% Post.order(date: :desc).each_with_index do |post,index|
        if index % 4 == 0 %>
            <div class="tile is-ancestor">
                <div class="tile is-parent is-3">
                    <article class="tile is-child box">
                        <figure class="image is-256x256">
                            <img src="https://bulma.io/images/placeholders/256x256.png" alt="Placeholder image">
                        </figure>
                        <p class="title is-4 card-footer-border-top"><%= post.title %></p>
                        <p class="subtitle is-7 has-text-weight-normal"><%= l post.date %></p>
                        <div class="content">
                            <p class="content"><%= truncate(strip_tags(post.description), length: 120) %></p>
                            <a href="#" class="content is-danger">Lire la suite...</a>
                        </div>
                    </article>
                </div>
        
        <% elsif index % 4 == 3 %>
            <div class="tile is-parent is-3">
                <article class="tile is-child box">
                    <figure class="image is-256x256">
                        <img src="https://bulma.io/images/placeholders/256x256.png" alt="Placeholder image">
                    </figure>
                    <p class="title is-4 card-footer-border-top"><%= post.title %></p>
                    <p class="subtitle is-7 has-text-weight-normal"><%= l post.date %></p>
                    <div class="content">
                        <p class="content"><%= truncate(strip_tags(post.description), length: 120) %></p>
                        <a href="#" class="content is-danger">Lire la suite...</a>
                    </div>
                </article>
            </div>
        </div>
        
        <% else %>
            <div class="tile is-parent is-3">
                <article class="tile is-child box">
                    <figure class="image is-256x256">
                        <img src="https://bulma.io/images/placeholders/256x256.png" alt="Placeholder image">
                    </figure>
                    <p class="title is-4 card-footer-border-top"><%= post.title %></p>
                    <p class="subtitle is-7 has-text-weight-normal"><%= l post.date %></p>
                    <div class="content">
                        <p class="content"><%= truncate(strip_tags(post.description), length: 120) %></p>
                        <a href="#" class="content is-danger">Lire la suite...</a> 
                    </div>
                </article>
            </div>

        <% end %>
    <% end %>