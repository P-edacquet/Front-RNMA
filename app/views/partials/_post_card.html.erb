<div class="column is-one-quarter">
    <div class="card">
        <div class="card-image">
            <figure class="image is-256x256">
                <img src="https://bulma.io/images/placeholders/256x256.png" alt="Placeholder image">
                <div class="is-danger-image-hover">
            </figure>
        </div>
        <div class="card-content card-border">
            <p class="title is-4 card-footer-border-top is-danger-text-hover"><%= post.title %></p>
            <p class="subtitle is-7 has-text-weight-normal"><%= l post.date %></p>
            <div class="content">
                <p class="content"><%= truncate(strip_tags(post.description), length: 120) %></p>
                <a href="#" class="content is-danger">Lire la suite...</a>
            </div>
        </div>
    </div>
</div>